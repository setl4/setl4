    define('prime(n)iter,this')                 :(prime.end)

*   Tests if _n_ is a prime integer.

prime

    n = integer(n) +n
    eq(n,2)                                     :(return)
    even(n)                                     :s(freturn)
    out('after even',n)
    out('ITER','iter 3 ' (square.root(n) + 1) ' 2')
    iter = new('iter 3 ' (square.root(n) + 1) ' 2')
    show(iter)
    loop(iter)

prime.loop

    this = next(iter)                           :f(return)
    even(this)                                  :(freturn)
    out('priming',this)
    
    multiple(n,this) out('composite',n)
    multiple(n,this)                            :s(freturn)f(prime.loop)

prime.end

